        <div class="imagem">
            <img class="logo" src="/img/listaPrancheta.jpg" alt="Lista de contatos">
        </div>
        <form method="post" action="/pegar-dados">
            <div class="row mb-3" style="margin-top: 60px;">
                <label for="inputEmail3" class="form-label">Contatos:</label></br>
                <!-- Ao menos 17 digitos, ou seja, dois contatos com virgula. -->
                <div class="col-sm-10">
                    <input type="tel" class="form-control" id="inputEmail3" name="contatos" minlength="17">
                </div>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Mensagem:</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="mensagem"></textarea>
            </div>
            <!-- Midia -->
            <fieldset class="row mb-3">
                <div class="col-sm-10">
